<div class="modal-header">
  <h4 class="modal-title">Edit Customer</h4>
</div>

<div class="modal-body">
  <form name="" ng-submit="submitCustomer(customer)">
    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>First name<span class="required"> required</span></label>
          <input class="form-control" ng-model="customer.first_name">
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>Last name<span class="required"> required</span></label>
          <input class="form-control" ng-model="customer.last_name">
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>Email<span class="required"> required</span></label>
          <input class="form-control" ng-model="customer.email">
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>Phone number<span class="required"> required</span></label>
          <input class="form-control" ng-model="customer.phone_number">
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>Address<span class="required"> required</span></label>
          <input class="form-control" ng-model="customer.adress">
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>Zip<span class="required"> required</span></label>
          <input class="form-control" ng-model="customer.zip_code">
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>City<span class="required"> required</span></label>
          <input class="form-control" ng-model="customer.city">
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel()">Cancel</button>
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
  </form>
</div>
