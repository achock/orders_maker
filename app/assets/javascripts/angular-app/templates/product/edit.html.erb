<div class="modal-header">
  <h4 class="modal-title">Edit Product</h4>
</div>

<div class="modal-body">
  <form name="" ng-submit="submitProduct(product)">
    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>Name</label>
          <input class="form-control" ng-model="product.name" required>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>Description</label>
          <input class="form-control" ng-model="product.description" required>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>Price</label>
          <input type="number" step="any" class="form-control" ng-model="product.price" required>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <label>Profit</label>
          <input type="number" step="any" class="form-control" ng-model="product.profit" required>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel()">Cancel</button>
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
  </form>
</div>
